@model Task01.Models.IndexOrderViewModel
@using Task01.Helpers

@{
    Layout = null;
}
@{
    var orders = Model.Orders;

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Orders</title>
    @Styles.Render("~/Content/css")
</head>
<body>
    <p>
        @Html.ActionLink("New", "CreateOrder", "", new { @class = "btn btn-primary col-md-offset-2" })
    </p>
    <table class="table table-hover">
        <tr>
            <th>
                @Html.DisplayName("Order ID")
            </th>
            <th>
                @Html.DisplayName("Order date")
            </th>
            <th>
                @Html.DisplayName("Order state")
            </th>
            <th>
                @Html.DisplayName("Sum")
            </th>
            <th>
                @Html.DisplayName("Action")
            </th>
            <th></th>
        </tr>

        @foreach (var item in orders)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.OrderID.ToString() , "DisplayDetails", new { id = item.OrderID }, new { @class = "btn btn-info" })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderState)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sum)
                </td>
                <td>
                    @Html.ActionLink("Add product", "CreateProduct", new { id = item.OrderID }, new { @class = "btn btn-primary" })
                </td>
            </tr>
        }
    </table>
    <div class="btn-group">
        @Html.PageLinks(Model.Page, x => Url.Action("Index", new { page = x }))
    </div>

</body>
</html>
